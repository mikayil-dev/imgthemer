---
import IconBookmarkCheck from '~icons/material-symbols/bookmark-check';
import Chevron from '~icons/lucide/chevron-down';
import type { ImageMetadata } from 'astro';
import { palettes } from '@assets/scripts/palettes';

interface Props {
  heroImg?: ImageMetadata;
  /** @default 'right' */
  heroImgSide?: 'left' | 'right';
  /** @default 'start' */
  textAlign?: 'start' | 'center' | 'end';
  eyebrow?: string;
  h1: string;
  copy: string;
  ctaText?: string;
  secondaryCtaText?: string;
}

const {
  heroImg,
  heroImgSide = 'right',
  textAlign = 'start',
  eyebrow,
  h1,
  copy,
  ctaText,
  secondaryCtaText,
}: Props = Astro.props;
---

<script>
  const MAX_FILE_SIZE = 15 * 1024 * 1024; // 15 MB
  const uploadBtn = document.querySelector('.upload-btn');
  const fileInput = document.getElementById('file');
  const themeSelect = document.getElementById('theme');
  let originalFile: File;
  const imgWrapperOriginal = document.querySelector(
    '.original-container .img-wrapper',
  );
  const imgWrapperModified = document.querySelector(
    '.modified-container .img-wrapper',
  );
  const downloadBtn = document.getElementById('download-btn');

  uploadBtn?.addEventListener('click', (e) => {
    e.preventDefault();
    fileInput?.click();
  });

  fileInput?.addEventListener('change', (event) => {
    if (themeSelect instanceof HTMLSelectElement) themeSelect.value = '';
    const target = event.target;
    if (
      !(target instanceof HTMLInputElement) ||
      !imgWrapperOriginal ||
      !imgWrapperModified
    ) {
      return;
    }

    const file = target.files?.[0];
    if (!file) return;

    if (file.size > MAX_FILE_SIZE) {
      alert('File is too large. Maximum size is 15MB.');
      target.value = '';
      return;
    }

    if (!file.type.startsWith('image/')) {
      alert('Please select an image file.');
      target.value = '';
      return;
    }

    if (target.files?.[0]) {
      originalFile = target.files[0];
    }

    outputFile(file, imgWrapperOriginal);
    outputFile(file, imgWrapperModified);
  });

  themeSelect?.addEventListener('change', () => {
    if (
      !(themeSelect instanceof HTMLSelectElement) ||
      !imgWrapperOriginal ||
      !imgWrapperModified ||
      !originalFile
    ) {
      return;
    }

    if (!themeSelect.value && originalFile) {
      outputFile(originalFile, imgWrapperModified);
      if (downloadBtn instanceof HTMLAnchorElement) {
        downloadBtn.href = '#';
        downloadBtn.tabIndex = -1;
      }
    }

    if (themeSelect.value) {
      imgWrapperModified.classList.add('loading');
      themeSelect.disabled = true;
      const formData = new FormData();
      formData.append('file', originalFile);
      formData.append('theme', themeSelect.value);
      fetch('/api/img', {
        method: 'POST',
        body: formData,
      })
        .then((response) => response.blob())
        .then((blob) => {
          const modifiedFile = new File([blob], originalFile.name, {
            type: blob.type,
          });
          outputFile(modifiedFile, imgWrapperModified);

          if (downloadBtn instanceof HTMLAnchorElement) {
            const url = URL.createObjectURL(blob);
            downloadBtn.href = url;
            downloadBtn.tabIndex = 0;
          }
        })
        .catch((error) => {
          console.error('Error modifying image:', error);
        })
        .finally(() => {
          imgWrapperModified.classList.remove('loading');
          themeSelect.disabled = false;
        });
    }
  });

  function outputFile(file: File, imgWrapper: Element) {
    const reader = new FileReader();
    reader.onload = (e) => {
      const readerTarget = e.target;
      if (
        readerTarget instanceof FileReader &&
        readerTarget.result &&
        imgWrapper
      ) {
        imgWrapper.innerHTML = `<img src="${readerTarget.result}" alt="Uploaded Image" />`;
      }
    };
    reader.readAsDataURL(file);
  }
</script>

<section id="home" class="hero">
  <div class={`content${heroImgSide === 'left' ? ' img-left' : ''}`}>
    <div class="text-container">
      {
        eyebrow && (
          <p class="eyebrow">
            <IconBookmarkCheck />
            <span>{eyebrow}</span>
          </p>
        )
      }

      <h1 class:list={{ small: heroImg }}>{h1}</h1>

      <p class="copy">
        {copy}
      </p>

      {
        (ctaText || secondaryCtaText) && (
          <form class="btn-container file-form">
            {ctaText && (
              <button class="primary-btn upload-btn" type="button">
                {ctaText}
              </button>
            )}
            {secondaryCtaText && (
              <a class="secondary-btn">{secondaryCtaText}</a>
            )}
            <input
              type="file"
              id="file"
              name="file"
              style="display:none"
              accept="image/*"
            />
          </form>
        )
      }
    </div>
  </div>

  <div class="result-container">
    <div class="original-container">
      <h3>Original Preview</h3>

      <div class="img-wrapper"></div>
    </div>

    <div class="modified-container">
      <div class="modified-wrapper">
        <h3>Modified Preview</h3>

        <div class="img-wrapper"></div>

        <div class="select-container">
          <select name="theme" id="theme">
            <option value="">Original</option>
            {
              palettes.map((palette) => (
                <option value={palette}>{palette}</option>
              ))
            }
          </select>
          <Chevron />
        </div>

        <a
          class="primary-btn"
          id="download-btn"
          href="#"
          download="modified-image"
          tabindex="-1"
        >
          Download Image
        </a>
      </div>
    </div>
  </div>
</section>

<style lang="scss" define:vars={{ textAlign }}>
  .hero {
    position: relative;
    display: flex;
    align-items: stretch;
    justify-content: center;
    flex-direction: column;
    padding: 0;
    max-width: none;

    .content {
      margin: 0 auto;
      position: relative;
      z-index: 2;
      display: flex;
      padding: var(--section-padding);
      padding-bottom: 0;
      max-width: var(--max-width);
      width: 100%;

      .text-container {
        z-index: 3;
        display: flex;
        flex-direction: column;
        align-items: var(--textAlign);
        text-align: var(--textAlign);
        max-width: 1000px;

        .eyebrow {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          letter-spacing: 0.5px;
          text-transform: uppercase;
          border-radius: 8px;
          padding: 6px 16px 5px;
          border: 1px solid var(--primary);
          width: fit-content;
          margin-bottom: 2rem;
          background-color: var(--highlight);
          color: var(--primary);
          font-weight: 800;

          span {
            line-height: 1;
          }
        }

        h1 {
          @include h2;
          font-weight: 900;
          margin-bottom: 1.5rem;

          &.small {
            @include h2;
            font-weight: 900;
          }
        }

        .copy {
          font-weight: 500;
        }

        .btn-container {
          margin-top: 2rem;
          display: flex;
          gap: 1rem;

          label {
            cursor: pointer;
          }
        }
      }
    }

    .result-container {
      z-index: 3;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      max-width: var(--max-width);
      padding: var(--section-padding);
      padding-top: 4rem;
      margin: 0 auto;
      width: 100%;
      gap: 40px;

      .original-container,
      .modified-container {
        flex: 1 1 400px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-sizing: border-box;

        h3 {
          margin-bottom: 1rem;
        }

        .img-wrapper {
          background-color: var(--background);
          border: 2px solid var(--border-color);
          border-radius: 8px;
          width: 100%;
          box-shadow: 0 4px 10px #00000016;
          overflow: hidden;
          display: flex;
          justify-content: center;
          align-items: center;
          position: relative;

          &::after {
            transition: 0.3s;
            opacity: 0;
            pointer-events: none;
            font-size: 2rem;
            content: 'Processing...';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.8);
            color: #fff;
            padding: 8px 16px;
            border-radius: 4px;
            font-size: 1rem;
          }

          &.loading {
            &::after {
              opacity: 1;
            }

            :global(img) {
              filter: blur(4px) brightness(0.7);
            }
          }

          :global(img) {
            width: 100%;
            height: auto;
            object-fit: contain;
            object-position: center;
            transition: 0.3s;
          }

          &:empty {
            aspect-ratio: 16/9;
          }
        }

        .modified-wrapper {
          display: flex;
          width: 100%;
          flex-direction: column;
          align-items: center;

          .img-wrapper {
            margin-bottom: 1rem;
          }

          .select-container {
            width: 100%;
            max-width: 300px;
            display: flex;
            align-items: center;
            border-bottom: 2px solid var(--primary);
            padding-right: 6px;
            background-color: var(--background);

            select {
              color: var(--text);
              width: 100%;
              appearance: none;
              background: transparent;
              border: none;
              padding: 10px 12px;
            }

            svg {
              color: var(--primary);
            }
          }

          #download-btn {
            margin-top: 1.5rem;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s;

            &:not([href='#']) {
              opacity: 1;
              pointer-events: auto;
            }
          }
        }
      }
    }
  }
</style>
