---
import { Image } from 'astro:assets';
import IconBookmarkCheck from '~icons/material-symbols/bookmark-check';
import Chevron from '~icons/lucide/chevron-down';
import type { ImageMetadata } from 'astro';

interface Props {
  bgPattern?: boolean;
  heroImg?: ImageMetadata;
  /** @default 'right' */
  heroImgSide?: 'left' | 'right';
  /** @default 'start' */
  textAlign?: 'start' | 'center' | 'end';
  eyebrow?: string;
  h1: string;
  copy: string;
  ctaText?: string;
  secondaryCtaText?: string;
}

const {
  bgPattern = true,
  heroImg,
  heroImgSide = 'right',
  textAlign = 'center',
  eyebrow,
  h1 = 'This is a super useful website',
  copy = 'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Dolore corrupti architecto id, suscipit itaque perferendis labore iusto. Suscipit cupiditate illo, quaerat architecto deserunt praesentium fugit officiis a placeat repellendus distinctio!',
  ctaText,
  secondaryCtaText,
}: Props = Astro.props;
---

<script>
  const uploadBtn = document.querySelector('.upload-btn');
  const fileInput = document.getElementById('file');
  const themeSelect = document.getElementById('theme');
  let originalFile: File;
  const imgWrapperOriginal = document.querySelector('.original.img-wrapper');
  const imgWrapperModified = document.querySelector('.modified.img-wrapper');
  const modifiedContainer = document.querySelector(
    '.result-container .modified-container',
  );

  uploadBtn?.addEventListener('click', (e) => {
    e.preventDefault();
    fileInput?.click();
  });

  fileInput?.addEventListener('change', (event) => {
    if (themeSelect instanceof HTMLSelectElement) themeSelect.value = '';
    const target = event.target;
    if (
      !(target instanceof HTMLInputElement) ||
      !imgWrapperOriginal ||
      !imgWrapperModified
    ) {
      return;
    }

    const file = target.files?.[0];
    if (target.files?.[0]) {
      originalFile = target.files[0];
    }
    if (!file) return;

    modifiedContainer?.setAttribute('data-visible', '');

    outputFile(file, imgWrapperOriginal);
    outputFile(file, imgWrapperModified);
  });

  themeSelect?.addEventListener('change', () => {
    if (
      !(themeSelect instanceof HTMLSelectElement) ||
      !imgWrapperOriginal ||
      !imgWrapperModified ||
      !originalFile
    ) {
      return;
    }

    if (!themeSelect.value && originalFile) {
      outputFile(originalFile, imgWrapperModified);
    }

    if (themeSelect.value) {
      const formData = new FormData();
      formData.append('file', originalFile);
      formData.append('theme', themeSelect.value);
      fetch('/api/img', {
        method: 'POST',
        body: formData,
      })
        .then((response) => response.blob())
        .then((blob) => {
          const modifiedFile = new File([blob], originalFile.name, {
            type: blob.type,
          });
          outputFile(modifiedFile, imgWrapperModified);
        })
        .catch((error) => {
          console.error('Error modifying image:', error);
        });
    }
  });

  function outputFile(file: File, imgWrapper: Element) {
    const reader = new FileReader();
    reader.onload = (e) => {
      const readerTarget = e.target;
      if (
        readerTarget instanceof FileReader &&
        readerTarget.result &&
        imgWrapper
      ) {
        imgWrapper.innerHTML = `<img src="${readerTarget.result}" alt="Uploaded Image" />`;
      }
    };
    reader.readAsDataURL(file);
  }
</script>

<section id="home" class="hero">
  <div class={`content${heroImgSide === 'left' ? ' img-left' : ''}`}>
    {bgPattern && <div class="bgPattern" />}
    <div class="text-container">
      {
        eyebrow && (
          <p class="eyebrow">
            <IconBookmarkCheck />
            <span>{eyebrow}</span>
          </p>
        )
      }

      <h1 class:list={{ small: heroImg }}>{h1}</h1>

      <p class="copy">
        {copy}
      </p>

      {
        (ctaText || secondaryCtaText) && (
          <form class="btn-container file-form">
            {ctaText && (
              <button class="primary-btn upload-btn" type="button">
                {ctaText}
              </button>
            )}
            {secondaryCtaText && (
              <a class="secondary-btn">{secondaryCtaText}</a>
            )}
            <input type="file" id="file" name="file" style="display:none" />
          </form>
        )
      }
    </div>

    {
      heroImg && (
        <div class="img-container">
          <Image class="hero-img" alt="Product image" src={heroImg} />
        </div>
      )
    }

    <div class="result-container">
      <h3>Original Preview</h3>
      <div class="original img-wrapper"></div>
      <div class="modified-container">
        <h3>Modified Preview</h3>
        <div class="select-container">
          <select name="theme" id="theme">
            <option value="">Original</option>
            <option value="gruvbox">Gruvbox</option>
            <option value="solarized">Solarized</option>
            <option value="dracula">Dracula</option>
            <option value="tokyonight">TokyoNight</option>
          </select>
          <Chevron />
        </div>
        <div class="modified img-wrapper"></div>
      </div>
    </div>
  </div>
</section>

<style lang="scss" define:vars={{ textAlign }}>
  .hero {
    position: relative;
    display: flex;
    align-items: stretch;
    justify-content: center;
    padding: 0;
    max-width: none;

    .content {
      position: relative;
      z-index: 2;
      display: flex;
      justify-content: space-between;
      gap: 100px;
      padding: var(--section-padding);
      max-width: var(--max-width);

      &.img-left {
        flex-direction: row-reverse;
      }

      @include view-tablet {
        gap: 60px;
      }

      @include view-tablet-s {
        flex-direction: column;
      }

      @include view-mobile {
        gap: 40px;
      }

      .bgPattern {
        position: absolute;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
        width: 100%;
        height: 90%;
        z-index: 1;
        overflow: hidden;
        background-position: center;
        background-size: 160px 80px;
        background-image:
          linear-gradient(0deg, rgba(0, 0, 0, 0.06) 2px, transparent 1px),
          linear-gradient(90deg, rgba(0, 0, 0, 0.06) 2px, transparent 1px);

        &::after {
          content: '';
          position: absolute;
          inset: 0;
          pointer-events: none;
          background: radial-gradient(
            circle at center,
            transparent 0%,
            var(--background) 90%
          );
        }
      }

      .text-container {
        z-index: 3;
        display: flex;
        flex-direction: column;
        align-items: var(--textAlign);
        flex: 1 1 50%;
        text-align: var(--textAlign);
        max-width: 1000px;

        .eyebrow {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          letter-spacing: 0.5px;
          text-transform: uppercase;
          border-radius: 8px;
          padding: 6px 16px 5px;
          border: 1px solid var(--primary);
          width: fit-content;
          margin-bottom: 2rem;
          background-color: var(--highlight);
          color: var(--primary);
          font-weight: 800;

          span {
            line-height: 1;
          }
        }

        h1 {
          @include h2;
          font-weight: 900;
          margin-bottom: 2.5rem;

          &.small {
            @include h2;
            font-weight: 900;
          }
        }

        .copy {
          font-weight: 500;
        }

        .btn-container {
          margin-top: 3rem;
          display: flex;
          gap: 1rem;

          label {
            cursor: pointer;
          }
        }
      }

      .result-container {
        z-index: 3;
        flex: 1 1 50%;
        display: flex;
        flex-direction: column;
        align-items: center;

        .img-wrapper {
          background-color: var(--background);
          margin: 2em 0;
          border: 2px solid var(--border-color);
          border-radius: 8px;
          width: 100%;
          box-shadow: 0 4px 10px #00000016;
          overflow: hidden;

          :global(img) {
            width: 100%;
            height: auto;
            object-fit: contain;
            object-position: center;
          }

          &:empty {
            aspect-ratio: 16/9;
          }
        }

        .modified-container {
          display: none;
          width: 100%;
          flex-direction: column;
          align-items: center;
          gap: 0.5em;

          &[data-visible] {
            display: flex;
          }

          .select-container {
            width: 100%;
            max-width: 300px;
            display: flex;
            align-items: center;
            border-bottom: 2px solid var(--primary);
            padding-right: 6px;
            background-color: var(--background);

            select {
              color: var(--text);
              width: 100%;
              appearance: none;
              background: transparent;
              border: none;
              padding: 10px 12px;
            }

            svg {
              color: var(--primary);
            }
          }
        }
      }
    }
  }
</style>
