---
import Email from '~icons/lucide/mail';
import GitHub from '~icons/bytesize/github';
import X from '~icons/mingcute/social-x-line';
import Top from '~icons/lucide/arrow-up-from-line';
---

<footer>
  <div class="contact">
    <h2>
      <span>Anymore questions?</span>

      <button
        class="primary-btn"
        title="Scroll back to top"
        onclick="window.scrollTo(0, 0);"
      >
        <Top />
      </button>
    </h2>

    <div class="bottom">
      <p>
        Shoot me a message anytime!<br />
        I'd love to hear from you.
      </p>

      <div class="links">
        <h3>Social</h3>

        <div class="links-container">
          <a
            href="mailto:mikayil_gacek@icloud.com"
            title="Send me an E-mail"
            target="_blank"
          >
            <Email />
          </a>

          <a
            href="https://github.com/mikayil-dev"
            title="Visit my GitHub profile"
            target="_blank"
          >
            <GitHub />
          </a>

          <a
            href="https://x.com/raiku_dev"
            title="Visit my X profile"
            target="_blank"
          >
            <X />
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="end-bar">
    <p class="copyright">
      &copy; {new Date().getFullYear()} Mikayil Gacek
    </p>
  </div>
</footer>

<style lang="scss">
  footer {
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--section-padding);
    padding-top: 0;
    margin-top: 80px;

    .contact {
      padding: var(--section-padding);
      padding-left: 0;
      padding-right: 0;
      padding-bottom: 0;
      border-top: 1px solid var(--primary);
      margin-bottom: 60px;

      @include view-mobile {
        margin-bottom: 40px;
      }

      h2 {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 40px;
        margin-bottom: 32px;

        span {
          max-width: 700px;
        }

        button {
          margin-top: 0.6em;
          white-space: nowrap;
          font-size: 1rem;
          display: flex;
          align-items: center;
          width: fit-content;
          padding: 8px;
        }

        @include view-tablet-s {
          flex-wrap: wrap-reverse;

          button {
            margin: 0;
            margin-left: auto;
          }
        }
      }

      .bottom {
        display: flex;
        align-items: flex-start;
        gap: 40px;
        justify-content: space-between;

        @include view-mobile {
          flex-wrap: wrap;
        }

        p {
          max-width: 600px;
        }

        .links {
          padding: 12px 20px;
          border: 1px solid var(--primary);
          border-radius: 8px;
          box-shadow: 0 4px 10px #00000055;

          h3 {
            @include h4;
            text-align: end;
            margin-bottom: 12px;

            @include view-mobile {
              text-align: start;
            }
          }

          .links-container {
            display: flex;
            gap: 20px;

            a {
              font-size: 20px;
              transition: 0.2s;
              line-height: 1;

              @include hover {
                color: var(--primary);
              }
            }
          }
        }
      }
    }

    .end-bar {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 20px;

      a {
        text-decoration: underline;
        color: var(--primary);
      }
    }
  }
</style>
